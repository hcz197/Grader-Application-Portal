<% #Page that shows details of individual courses, generated by rails %>

<% #If signed-in, show courses %>
<% if user_signed_in? %>
  <% content_for :title do %>
    Course details
  <% end %>


  <p id="notice"><%= notice %></p>

  <p>
    <strong>Course Number:</strong>
    <%= @course.coursenum %>
  </p>

  <p>
    <strong>Section number:</strong>
    <%= @course.sectionnum %>
  </p>

  <p>
    <strong>Course name:</strong>
    <%= @course.coursename %>
  </p>

  <p>
    <strong>Days:</strong>
    <% if @course.days != '' %>
      <%= @course.days %>
    <% else %>
      TBD
    <% end %>
  </p>

  <p>
    <strong>Start time:</strong>
    <%= @course.starttime %>
  </p>

  <p>
    <strong>End time:</strong>
    <%= @course.endtime %>
  </p>

  <p>
    <strong>Enrolled:</strong>
    <%= @course.enrolled %>
  </p>

  <p>
    <strong>Waitlist:</strong>
    <%= @course.waitlist %>
  </p>

  <p>
    <strong>Teacher Name:</strong>
    <% user = User.find @course.user_id%>
    <%= user.fname + " " + user.lname %>
  </p>

  <%= link_to 'Back to courses', courses_path %>


<% #If not signed in, redirect to sign-in page %>
<% else %>
  <% controller.redirect_to new_authentication_session_path %>
<% end %>
